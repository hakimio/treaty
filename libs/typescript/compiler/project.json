{
  "name": "compiler",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/typescript/compiler/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/typescript/compiler",
        "main": "libs/typescript/compiler/src/index.ts",
        "tsConfig": "libs/typescript/compiler/tsconfig.lib.json",
        "assets": []
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs compiler {args.ver} {args.tag}",
      "dependsOn": ["build"]
    }
  },
  "tags": []
}
