{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug rust_authoring",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rust_authoring",
                    "--package=rust_authoring"
                ],
                "filter": {
                    "name": "rust_authoring",
                    "kind": "bin"
                }
            },
            "args": ["${workspaceFolder}/apps/rust/authoring/src/test.ts"],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1"
            },
            "terminal": "integrated"
        }
    ]
}